/* pages/home/device_charts/device_charts.wxss */
.canvas{
  width: 100%;
  height: 200px;
  background-color: white;
}
text{
  margin: 40rpx;
  font-size: 28rpx;
}
.tabs{
  margin: 20rpx;
  display: flex;
  flex-direction: row;
}
.tabs_left{
  padding: 10rpx;
  background: #888;
  display: block;
  overflow: hidden;
  border: 2rpx solid #999;
  border-right: none;
  border-top-left-radius: 8%;
  border-bottom-left-radius: 8%;
}
.tabs_right{
  padding: 10rpx;
  background: white;
  display: block;
  overflow: hidden;
  border: 2rpx solid #999;
  border-left: none;
  border-top-right-radius: 8%;
  border-bottom-right-radius: 8%;
}
.dev_name{
  color: #dddddd;
}


.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  /*display: flex;
  flex-direction: column;
  justify-content: center;*/
}
.btn-line{
  width: 1px;
  background-color: #A5A5A5;
}
.btn-view{
  width: 100%;
  display: flex;
  height: 40px;
  flex-direction: row;
  justify-content: space-around
}
.line-top{
   width: 100%;
   height: 1px;
   background-color: #A5A5A5;
}
.btn-cancel{
  width: 49%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.dialog-title{
  margin-top: 20px;
  text-align: center;
  margin-bottom: 15px;

}
.input-style{
  width: 96%;
  margin-left: 2%;
  height: 30px;
  text-align: center;
}

.input-view{
  height: 30px;
  width: 70%;
  margin-left: 15%;
  border: 1px #A5A5A5 solid;
  border-radius: 5px;
  margin-bottom: 20px;
  margin-top: 20px;
}