Page{
  background-color: white;
}
icon, .progress{
  margin-top: 200rpx;
}
.progress{
  width: 200rpx;
  height: 200rpx;
  border:10rpx solid #2A88DF;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.progress text{
  font-size: 84rpx;
  color: #2A88DF;
}
.title, .subtitle{
  margin-top: 20rpx;
}
.subtitle{
  color: #BCBCBC;
  font-size: 28rpx;
}
.button{
  width: 90%;
  margin: 10rpx 5%;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
}